.left_row {
  background-color: #E8E6E8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100%;
}
.left_row .head {
  width: 100%;
  border-bottom: 1px solid #BBBBBB;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.left_row .head .eml text {
  color: #7C7D7C;
  font-size: 26rpx;
}
.left_row .body {
  width: 100%;
  height: 700rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
}
.left_row .body .icon_row {
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.left_row .body .icon_row .icon {
  padding-left: 50rpx;
  margin-top: 50rpx;
  width: 70rpx;
  height: 70rpx;
}
.left_row .body .title_row {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.left_row .body .title_row .title {
  margin-top: 50rpx;
  width: 140rpx;
  height: 70rpx;
  font-size: 28rpx;
}
.left_row .foot {
  margin-top: 450rpx;
  width: 100%;
  height: 400rpx;
  border-top: 1px solid #BBBBBB;
}
.left_row .foot .exit_row {
  margin-top: 15rpx;
  display: flex;
  justify-content: flex-end;
}
.left_row .foot .exit_row .exit_icon {
  flex: 2;
}
.left_row .foot .exit_row .exit_nav {
  flex: 3;
}
