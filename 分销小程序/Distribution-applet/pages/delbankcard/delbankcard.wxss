/* pages/delbankcard/delbankcard.wxss */
Page{width: 100%;height: 100%;background:rgb(245, 245, 245);}
.dlbankcard .dlbankcard_top{width: 100%;height: 200rpx;background: rgb(224, 69,29);color: white;font-size: 40rpx;position: relative;}
.dlbankcard .dlbankcard_top text{margin:40rpx 0 40rpx 50rpx;display: inline-block;}
.dlbankcard .dlbankcard_top .dlbk_forme{position: absolute;width: calc(100vw - 50rpx);border-radius:10rpx;box-shadow: 0rpx 0rpx 10rpx rgb(151, 147, 147);margin-left: 25rpx;background-color: white;color: black;}
.dlbankcard_top .dlbk_forme{display: flex;flex-flow: column;padding: 80rpx 0;}
.dlbankcard_top .dlbk_fm{display: flex;align-items: center;padding: 30rpx 0rpx;font-size: 30rpx;border-bottom: 1rpx solid rgb(245, 245, 245);margin:0 10rpx}
.dlbankcard_top .dlbk_fm view{width: 150rpx;text-align: right;margin-right: 20rpx;}
.dlbankcard_top .dlbk_fm input{width:70%;padding-left:30rpx;}
.dlbk_bottom{height: 300rpx;background: white;position: absolute;bottom: 0;width: 100%;display: flex;}
.dlbk_bottom button{width:calc(50vw - 50rpx);background:rgb(224, 69,29);height: 80rpx;line-height: 80rpx;border-radius: 50rpx;font-size: 30rpx;color: white;margin-top: 110rpx;}