/**index.wxss**/
.index {
  height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
}
.index .top_row {
  width: 100%;
  height: 210px;
  background: -webkit-linear-gradient(top, #4cc18d, #0E9659);
  position: relative;
}
.index .top_row .nowMoney {
  width: 160rpx;
  height: 120rpx;
  text-align: center;
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  margin: auto;
}
.index .top_row .nowMoney .title {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 700;
}
.index .top_row .nowMoney .number {
  color: #ffffff;
  font-size: 70rpx;
}
.index .top_row .txHistory {
  width: 160rpx;
  height: 40rpx;
  text-align: center;
  position: absolute;
  top: 40px;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .top_row .txHistory .title {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 700;
}
.index .top_row .txHistory .number {
  margin-left: 10rpx;
  height: 100%;
  width: 20rpx;
  color: #ffffff;
}
.index .top_row .txHistory .number image {
  width: 100%;
  height: 50%;
}
.index .top_row .yesterday {
  width: 160rpx;
  height: 120rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  bottom: 50%;
  left: 30px;
}
.index .top_row .yesterday .title {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 700;
}
.index .top_row .yesterday .number {
  color: #ffffff;
}
.index .top_row .accumulate {
  width: 160rpx;
  height: 120rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  bottom: 50%;
  right: 30px;
}
.index .top_row .accumulate .title {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 700;
}
.index .top_row .accumulate .number {
  color: #ffffff;
}
.index .top_row .navto {
  position: absolute;
  bottom: -25px;
  left: 0;
  right: 0;
  margin: auto;
  width: 200px;
  height: 60px;
  border-radius: 30px;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .top_row .navto .natotitle {
  width: 80%;
  height: 55%;
  border-radius: 30px;
  background-color: #2ea972;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-weight: 600;
  font-size: 28rpx;
}
.index .top_row .navto .natotitle .view {
  color: #ffffff;
}
.index .bottom_row {
  margin-top: 40px;
  width: 100%;
  height: 280px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: flex-start;
  flex-wrap: wrap;
}
.index .bottom_row .content_row {
  height: 70px;
  width: 45%;
  margin-top: 7px;
  padding: 4px;
  background-color: #ffffff;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index .bottom_row .content_row .icon {
  width: 60rpx;
  height: 60rpx;
}
.index .bottom_row .content_row .icon image {
  width: 100%;
  height: 100%;
}
.index .bottom_row .content_row .txt {
  margin-top: 10rpx;
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #97979c;
}
