.mine_row {
  width: 100%;
  height: 2000rpx;
}
.mine_row .head_row {
  position: relative;
}
.mine_row .head_row text {
  position: absolute;
  top: 50rpx;
  right: 290rpx;
  font-size: 38rpx;
  font-weight: 200;
}
.mine_row .body {
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  line-height: 60rpx;
}
.mine_row .body .ttt {
  font-size: 36rpx;
}
.mine_row .bottom {
  display: flex;
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #E8E6E8;
  line-height: 80rpx;
}
.mine_row .bottom .btn {
  width: 100%;
  height: 100%;
  flex: 1;
  flex-wrap: nowrap;
}
