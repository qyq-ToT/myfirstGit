.Thebig {
  background-color: green;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 3000rpx;
}
.Thebig .kk_row {
  margin-top: 20rpx;
  height: 320rpx;
  width: 100%;
  border: 5rpx solid yellowgreen;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.Thebig .kk_row .kk_row_nr {
  flex: 1;
  width: 17%;
  height: 45%;
  border: 5rpx solid black;
}
.Thebig .kk_row .kk_row_nr .kk-icon img.img1 {
  width: 50rpx;
  height: 50rpx;
}
.Thebig .live_top_row {
  border: 5rpx solid red;
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.Thebig .live_top_row .left {
  flex: 1;
}
.Thebig .live_top_row .right {
  flex: 1;
}
.Thebig .live_content_row {
  border: 5rpx solid blue;
  margin-top: 20rpx;
  width: 100%;
  height: 2500rpx;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  flex-wrap: wrap;
}
.Thebig .live_content_row .live_box {
  width: 48%;
  height: 400rpx;
  border: 5rpx solid rebeccapurple;
}
.Thebig .live_content_row .live_box .nav navigator .img2 {
  width: 100rpx;
  height: 100rpx;
}
