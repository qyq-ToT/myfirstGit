.flrow3 .on_row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 150rpx;
  text-align: inherit;
}
.flrow3 .on_row .sp {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-end;
  border: 1px solid black;
  text-align: center;
}
.flrow3 .on_row .sp img {
  flex: 2;
}
.flrow3 .on_row .sp text {
  flex: 1;
  background-color: yellow;
}
.flrow3 .under_row {
  display: flex;
  flex-direction: column;
  height: 2900rpx;
  background-color: red;
}
.flrow3 .under_row .video_row {
  flex: 1;
  width: 100%;
  display: flex;
}
.flrow3 .under_row .video_row .video_lj {
  flex: 1;
  border: 3rpx solid yellow;
  height: 280rpx;
}
.flrow3 .under_row .video_row .video_title {
  flex: 1;
  border: 3rpx solid yellow;
  height: 280rpx;
}
