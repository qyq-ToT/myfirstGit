.exRank {
  padding: 0;
  margin: 0;
  height: 700px;
  width: 100%;
}
.exRank .head {
  width: 100%;
  height: 140px;
  background-color: #e0451d;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.exRank .head .liveRk {
  margin-left: 10px;
  width: 120px;
  height: 40px;
  color: #ffffff;
  font-weight: 400;
  font-size: 45rpx;
  text-align: left;
}
.exRank .head .rkContent {
  margin-left: 10px;
  width: 120px;
  height: 40px;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  text-align: left;
}
.exRank .body .title {
  width: 100%;
  height: 35px;
  justify-content: space-between;
  display: flex;
  align-items: baseline;
  font-size: 26rpx;
}
.exRank .body .title .left {
  margin-left: 20px;
  width: 50px;
  height: 35px;
}
.exRank .body .title .center {
  height: 100%;
  width: 180px;
}
.exRank .body .title .right {
  width: 70px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.exRank .body .title .right .txtr {
  width: 100%;
  height: 20px;
  text-align: center;
}
.exRank .body .line {
  display: flex;
  width: 100%;
  height: 35px;
  justify-content: space-between;
}
.exRank .body .line .rkIcon {
  margin-left: 10px;
  width: 50px;
  height: 35px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.exRank .body .line .rkIcon .rkNum {
  width: 15px;
  height: 15px;
}
.exRank .body .line .rkIcon .rkimg {
  width: 35px;
  height: 100%;
}
.exRank .body .line .userInfo {
  display: flex;
  height: 100%;
  width: 180px;
}
.exRank .body .line .userInfo .userIcon {
  width: 35px;
  height: 100%;
}
.exRank .body .line .userInfo .userIcon .uimg {
  width: 35px;
  height: 35px;
  border-radius: 50%;
}
.exRank .body .line .userInfo .username {
  margin-left: 10px;
  width: 100px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.exRank .body .line .userInfo .username .unt {
  font-size: 28rpx;
  font-weight: 400;
  width: 100%;
  height: 50%;
}
.exRank .body .line .result {
  width: 70px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.exRank .body .line .result .text {
  width: 100%;
  height: 20px;
  text-align: center;
}
